@model IEnumerable<Crud.Models.Produto>

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>Lista dos Produto</h2>

<p>


    <a class="btn btn-primary" role="button" @Html.ActionLink("Adicionar novo Produto", "Create")</a>
    <br />
    <br />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayName("Ultima Compra")
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estoque)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.UltimaCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estoque)
        </td>
        <td>
            <a class="btn btn-primary" role="button" @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            <a class="btn btn-warning" role="button" @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
            <a class="btn btn-danger" role="button"  @Html.ActionLink("Excluir", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
